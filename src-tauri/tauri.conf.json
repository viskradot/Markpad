{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Markpad",
  "version": "../package.json",
  "identifier": "com.alecdotdev.markpad",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [],
    "security": {
      "csp": {
        "default-src": "'self'",
        "script-src": "'self' 'unsafe-inline'",
        "style-src": "'self' 'unsafe-inline' https://fonts.googleapis.com",
        "img-src": "'self' asset: https: http://asset.localhost blob: data:",
        "connect-src": "'self'",
        "frame-src": "https://www.youtube.com https://www.youtube-nocookie.com",
        "font-src": "'self' https://fonts.gstatic.com"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "dmg", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "name": "Markdown File",
        "description": "Opens Markdown files with Markpad",
        "role": "Viewer"
      }
    ],
    "windows": {
      "nsis": {
        "installMode": "both",
        "installerHooks": "hooks.nsi"
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  }
}
