{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MarkdownViewer",
  "version": "2.0.0",
  "identifier": "com.alecdotdev.markdownviewer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Markdown Viewer",
        "width": 800,
        "height": 600,
        "transparent": false,
        "visible": true,
        "resizable": true,
        "center": true,
        "decorations": false,
        "backgroundColor": "#181818"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "name": "Markdown File",
        "description": "Opens Markdown files with Markdown Viewer",
        "role": "Viewer"
      }
    ],
    "windows": {
      "nsis": {
        "installMode": "both",
        "installerHooks": "hooks.nsi"
      }
    }
  }
}
