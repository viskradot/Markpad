{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Markpad",
  "version": "2.2.2",
  "identifier": "com.alecdotdev.markpad",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Markpad",
        "width": 800,
        "height": 600,
        "visible": false,
        "resizable": true,
        "center": true,
        "backgroundColor": "#181818",
        "decorations": false,
        "shadow": true,
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "dmg", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "name": "Markdown File",
        "description": "Opens Markdown files with Markpad",
        "role": "Viewer"
      }
    ],
    "windows": {
      "nsis": {
        "installMode": "both",
        "installerHooks": "hooks.nsi"
      }
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    }
  }
}
